//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
float4 VS( float4 Pos : POSITION ) : SV_POSITION
{
    //return Pos;
    return Pos + float4(0.2f, 0.2f, 0.0f, 1.0f);
    // float3 p = 1.5f * Pos.xyz;
    // return float4(p, 1);

}


//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 PS( float4 Pos : SV_POSITION ) : SV_Target
{
    //r = 0.175f 
    return float4( 0.176f / 0.255f, 0.196f / 0.255f, 0.222f / 0.255f, 1.0f );    // Yellow, with Alpha = 1
}
